<h2>Purchase Order {{status}}</h2>
<p>Dear {{userName}},</p>

<div style="background-color: #f9f9f9; padding: 15px; border-radius: 5px;">
    <p><strong>Purchase Order Details:</strong></p>
    <ul style="list-style: none; padding: 0;">
        <li>Order Reference: {{purchaseId}}</li>
        <li>Order Date: {{orderDate}}</li>
        <li>Store: {{storeName}}</li>
        <li>Status: {{status}}</li>
    </ul>
</div>

<table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
    <thead>
        <tr style="background-color: #f2f2f2;">
            <th style="padding: 10px; border: 1px solid #ddd;">Item</th>
            <th style="padding: 10px; border: 1px solid #ddd;">Quantity</th>
            <th style="padding: 10px; border: 1px solid #ddd;">Unit Price</th>
            <th style="padding: 10px; border: 1px solid #ddd;">Total</th>
        </tr>
    </thead>
    <tbody>
        {{#each items}}
        <tr>
            <td style="padding: 10px; border: 1px solid #ddd;">{{explosiveType}}</td>
            <td style="padding: 10px; border: 1px solid #ddd;">{{quantity}}</td>
            <td style="padding: 10px; border: 1px solid #ddd;">{{unitPrice}}</td>
            <td style="padding: 10px; border: 1px solid #ddd;">{{totalPrice}}</td>
        </tr>
        {{/each}}
        <tr style="background-color: #f9f9f9;">
            <td colspan="3" style="padding: 10px; border: 1px solid #ddd; text-align: right;"><strong>Total Amount:</strong></td>
            <td style="padding: 10px; border: 1px solid #ddd;">{{totalAmount}}</td>
        </tr>
    </tbody>
</table>

<div style="margin-top: 20px;">
    <p><strong>Delivery Information:</strong></p>
    <ul>
        <li>Expected Delivery Date: {{deliveryDate}}</li>
        <li>Delivery Location: {{deliveryLocation}}</li>
    </ul>
</div>

{{#if paymentDetails}}
<div style="margin-top: 20px;">
    <p><strong>Payment Details:</strong></p>
    <ul>
        <li>Payment Method: {{paymentDetails.method}}</li>
        <li>Payment Status: {{paymentDetails.status}}</li>
        {{#if paymentDetails.reference}}
        <li>Reference Number: {{paymentDetails.reference}}</li>
        {{/if}}
    </ul>
</div>
{{/if}}